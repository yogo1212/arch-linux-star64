pkgname=star64-extlinux
pkgver=0.1
pkgrel=1
pkgdesc="Install/Update extlinux.conf to boot the Star64 SBC using libalpm hooks"
arch=('riscv64')
url="TODO"
license=('GPL2')
depends=('dracut')
source=('create_star64_extlinux_conf' \
        'libalpm.hook')
sha256sums=('57f6c1b44a63d6ff28cdda954a567c32234be844cbc44efd4560c7952e1b9569' \
            '79c43d0b029e2a02ef25d98917fd6ad0588ee7cbf5266dc87c48ef2a76f8e43f')

package() {
  mkdir -p "$pkgdir/boot/extlinux" "$pkgdir/usr/bin" "$pkgdir/usr/share/libalpm/hooks/"

	cp create_star64_extlinux_conf "$pkgdir/usr/bin/"

	cp libalpm.hook "$pkgdir/usr/share/libalpm/hooks/90-create-star64-extlinux-conf.hook"
}
